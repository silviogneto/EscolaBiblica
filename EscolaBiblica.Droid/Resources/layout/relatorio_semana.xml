<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/LblData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="01/10/2019 Ã  05/10/2019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextoBold5"/>

    <TextView
        android:id="@+id/LblMatriculados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Matriculados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblData"
        style="@style/Bold"/>
    <TextView
        android:id="@+id/TextMatriculados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="10"
        app:layout_constraintStart_toEndOf="@+id/LblMatriculados"
        app:layout_constraintTop_toTopOf="@+id/LblMatriculados"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/LblAusentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblMatriculados"
        style="@style/Bold"/>
    <TextView
        android:id="@+id/TextAusentes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/LblAusentes"
        app:layout_constraintTop_toTopOf="@+id/LblAusentes"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/LblPresentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblAusentes"
        style="@style/Bold"/>
    <TextView
        android:id="@+id/TextPresentes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/LblPresentes"
        app:layout_constraintTop_toTopOf="@+id/LblPresentes"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/LblVisitantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visitantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblPresentes"
        style="@style/Bold"/>
    <TextView
        android:id="@+id/TextVisitantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/LblVisitantes"
        app:layout_constraintTop_toTopOf="@+id/LblVisitantes"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/LblOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oferta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblVisitantes"
        style="@style/Bold"/>
    <TextView
        android:id="@+id/TextOferta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="R$1,00"
        app:layout_constraintStart_toEndOf="@+id/LblOferta"
        app:layout_constraintTop_toTopOf="@+id/LblOferta"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>