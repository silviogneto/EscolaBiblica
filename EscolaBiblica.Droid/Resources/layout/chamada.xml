<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ImageButton
		android:id="@+id/BtnPreviusDay"
		android:minWidth="50dp"
		android:layout_width="wrap_content"
		android:layout_height="?attr/actionBarSize"
		android:background="?android:attr/selectableItemBackground"
		android:contentDescription="@string/diaAnterior"
		android:src="@drawable/ic_chevron_left"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	<TextView
		android:id="@+id/TextMes"
		android:layout_width="0dp"
		android:layout_height="?attr/actionBarSize"
		android:background="?android:attr/selectableItemBackground"
		android:gravity="center"
		android:text="@string/mes"
		app:layout_constraintStart_toEndOf="@+id/BtnPreviusDay"
		app:layout_constraintTop_toTopOf="@+id/BtnPreviusDay"
		app:layout_constraintEnd_toStartOf="@+id/BtnNextDay"
		style="@style/Texto5"/>
	<ImageButton
		android:id="@+id/BtnNextDay"
		android:minWidth="50dp"
		android:layout_width="wrap_content"
		android:layout_height="?attr/actionBarSize"
		android:background="?android:attr/selectableItemBackground"
		android:contentDescription="@string/proximoDia"
		android:src="@drawable/ic_chevron_right"
		app:layout_constraintStart_toEndOf="@+id/TextMes"
		app:layout_constraintTop_toTopOf="@+id/TextMes"
		app:layout_constraintEnd_toEndOf="parent" />
	<View
		android:id="@+id/Divisor1"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:background="@color/colorPrimary"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/TextMes"
		app:layout_constraintEnd_toEndOf="parent" />
	<ScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/Divisor1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<android.support.design.widget.TextInputLayout
				android:id="@+id/LayoutTextVisitantes"
				android:layout_marginTop="5dp"
				style="@style/InputLayout">
				<EditText
					android:id="@+id/TextVisitantes"
					android:hint="@string/visitantes"
					style="@style/NumberField"/>
			</android.support.design.widget.TextInputLayout>
			
			<android.support.design.widget.TextInputLayout
				android:id="@+id/LayoutTextBiblias"
				android:layout_marginTop="5dp"
				style="@style/InputLayout">
				<EditText
					android:id="@+id/TextBiblias"
					android:hint="@string/biblias"
					style="@style/NumberField"/>
			</android.support.design.widget.TextInputLayout>
			
			<android.support.design.widget.TextInputLayout
				android:id="@+id/LayoutTextRevistas"
				android:layout_marginTop="5dp"
				style="@style/InputLayout">
				<EditText
					android:id="@+id/TextRevistas"
					android:hint="@string/revistas"
					style="@style/NumberField"/>
			</android.support.design.widget.TextInputLayout>
			
			<android.support.design.widget.TextInputLayout
				android:id="@+id/LayoutTextOferta"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				style="@style/InputLayout">
				<EditText
					android:id="@+id/TextOferta"
					android:hint="@string/oferta"
					style="@style/MoneyField"/>
			</android.support.design.widget.TextInputLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/colorAccent"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:text="@string/alunosMatriculados"
				style="@style/Bold"/>
			<android.support.v7.widget.RecyclerView
				android:id="@+id/RecyclerView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="vertical" />
		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>
