<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/PanelData"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="2dp">
        <ImageButton
            android:id="@+id/BtnNextDay"
            android:minWidth="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/proximoDia"
            android:tint="@android:color/white"
            android:src="@drawable/ic_chevron_right" />
        <ImageButton
            android:id="@+id/BtnPreviusDay"
            android:minWidth="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/diaAnterior"
            android:tint="@android:color/white"
            android:src="@drawable/ic_chevron_left" />
        <TextView
            android:id="@+id/TextMes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/BtnNextDay"
            android:layout_toRightOf="@id/BtnPreviusDay"
            android:gravity="center"
            android:text="@string/mes"
            android:textColor="@android:color/white"
            style="@style/Texto5"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PanelData">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/LayoutTextVisitantes"
                    style="@style/InputLayout">
                    <EditText
                        android:id="@+id/TextVisitantes"
                        android:hint="@string/visitantes"
                        style="@style/NumberField"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/LayoutTextBiblias"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/LayoutTextVisitantes"
                    style="@style/InputLayout">
                    <EditText
                        android:id="@+id/TextBiblias"
                        android:hint="@string/biblias"
                        style="@style/NumberField"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/LayoutTextRevistas"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/LayoutTextBiblias"
                    style="@style/InputLayout">
                    <EditText
                        android:id="@+id/TextRevistas"
                        android:hint="@string/revistas"
                        style="@style/NumberField"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/LayoutTextOferta"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/LayoutTextRevistas"
                    style="@style/InputLayout">
                    <EditText
                        android:id="@+id/TextOferta"
                        android:hint="@string/oferta"
                        style="@style/MoneyField"/>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/alunosMatriculados"
                    style="@style/Bold"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
