<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        android:id="@+id/PanelSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?attr/colorPrimaryDark">
        <Spinner
            android:id="@+id/ComboSetor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <Spinner
            android:id="@+id/ComboCongregacao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ComboSetor"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/PanelData"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/PanelSetor"
        android:background="?attr/colorPrimaryDark"
        android:elevation="5dp">
        <ImageButton
            android:id="@+id/BtnNextDay"
            android:minWidth="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/proximoDia"
            android:tint="@android:color/white"
            android:src="@drawable/ic_chevron_right" />
        <ImageButton
            android:id="@+id/BtnPreviusDay"
            android:minWidth="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/diaAnterior"
            android:tint="@android:color/white"
            android:src="@drawable/ic_chevron_left" />
        <TextView
            android:id="@+id/TextMes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/BtnNextDay"
            android:layout_toRightOf="@id/BtnPreviusDay"
            android:gravity="center"
            android:text="@string/mes"
            android:textColor="@android:color/white"
            style="@style/Texto5"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PanelData">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/LblSetor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Bold"/>
                <TextView
                    android:id="@+id/TextSetor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="02"
                    app:layout_constraintStart_toEndOf="@+id/LblSetor"
                    app:layout_constraintTop_toTopOf="@+id/LblSetor"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/LblCongregacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/congregacao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LblSetor"
                    style="@style/Bold"/>
                <TextView
                    android:id="@+id/TextCongregacao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Garcia"
                    app:layout_constraintStart_toEndOf="@+id/LblCongregacao"
                    app:layout_constraintTop_toTopOf="@+id/LblCongregacao"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/LblOfertaMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total de Oferta do MÃªs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LblCongregacao"
                    style="@style/Bold"/>
                <TextView
                    android:id="@+id/TextOfertaMes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="R$ 100,00"
                    app:layout_constraintStart_toEndOf="@+id/LblOfertaMes"
                    app:layout_constraintTop_toTopOf="@+id/LblOfertaMes"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/LblOfertaDepartamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% do Departamento"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LblOfertaMes"
                    style="@style/Bold"/>
                <TextView
                    android:id="@+id/TextOfertaDepartamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="R$ 20,00"
                    app:layout_constraintStart_toEndOf="@+id/LblOfertaDepartamento"
                    app:layout_constraintTop_toTopOf="@+id/LblOfertaDepartamento"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="vertical" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
